# ------------------------------
# Node modules
# ------------------------------
# Node packages are huge and can be reinstalled via package.json
/node_modules/

# ------------------------------
# Environment variables
# ------------------------------
# Keep secrets like API keys and DB credentials local
.env
.env.*     # in case you have .env.local, .env.development, etc.

# ------------------------------
# Logs
# ------------------------------
# Application and package manager logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
logs/
*.log

# ------------------------------
# Tailwind output & public build
# ------------------------------
# Ignore compiled CSS/JS; keep folder structure with .gitkeep
/public/*
!/public/.gitkeep


# ------------------------------
# Build / distribution folders
# ------------------------------
# Ignore build artifacts if you add build scripts
dist/
build/

# ------------------------------
# Cache & temp files
# ------------------------------
# Temporary files generated by tools or editors
.cache/
.tmp/
temp/
*.tmp

# ------------------------------
# System files
# ------------------------------
# OS-specific hidden files
.DS_Store
Thumbs.db

# ------------------------------
# Editor folders
# ------------------------------
# IDE/project settings
.vscode/
.idea/

# ------------------------------
# PID files
# ------------------------------
# Process ID files for local runs
*.pid
*.seed

# ------------------------------
# Coverage reports
# ------------------------------
# If you ever add tests, ignore coverage output
coverage/

# ------------------------------
# Optional: SQLite database
# ------------------------------
# Ignore SQLite files if you use a local demo DB
*.sqlite
*.sqlite3
*.sqlite-shm
*.sqlite-wal

# ------------------------------
# Optional: session storage
# ------------------------------
# Ignore session storage files if used
sessions/